---
import Header from "../components/Header.astro";
// import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title = "Dharmzeey Portfoilo" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="title" content="Adam Olanrewaju personal website">
    <meta name="description" content="This is my personal website that contains my works and my informaton">
    <meta name="keywords" content="Adam, Olanrewaju, Dharmzeey, Adedamola, personal, website">
    <link rel="shortcut icon" href="/idea.ico" type="image/x-icon" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Readex+Pro&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="container m-auto">
    <Header />
    <div class="">
      <slot />
    </div>
    <style is:global>
      html {
          font-family: 'Readex Pro', sans-serif;
      }

      body {
        @apply bg-slate-900 bg-opacity-100 text-white
      }

      button,
      .btn {
        @apply p-1 px-4 inline-block uppercase tracking-widest rounded-full border-[1px] border-white hover:bg-white hover:text-black transition ease-in delay-100;
      }

      .project-img {
        @apply h-[25vh] w-full;
      }

      .contain {
        @apply h-full w-full object-cover;
      }

      .heading {
        @apply text-xl font-bold;
      }
    </style>
  </body>
</html>
