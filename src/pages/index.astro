---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Dharmzeey">
	<section class="grid lg:grid-cols-2 w-11/12 m-auto">
		<div
			class="relative min-h-[30rem] md:min-h-[40rem] lg:h-0 bg-[url('/images/second-bg.jpg')] bg-cover bg-center bg-slate-900 bg-blend-darken"
		>
			<div class="container m-auto flex justify-center items-center">
				<div class="h-5/6 md:h-1/4 absolute top-28 md:top-72">
					<h1 id="scale-out" class="text-2xl md:text-4xl text-center">
						Howdy!, I'M Adam,
					</h1>
					<h2 id="scale-in" class="md:mt-8 md:text-lg px-3 text-justify leading-8">
						A dedicated Flutter developer and full-stack django web developer
						with a passion for crafting innovative solutions. I'm committed to
						refining my skills and exploring the realms of technology. Beyond
						coding, I'm also a conservationist and environmentalist, driven by a
						desire to make a positive impact.
						<div class="text-slate-200">
							Let's connect and explore the possibilities together!
						</div>
					</h2>
				</div>
			</div>
		</div>
		<div>
			<dotlottie-player
				src="https://lottie.host/694b026c-48a8-4c01-accb-1d8552dbc75c/UGngZUbUxn.json"
				background="transparent"
				speed="1"
				loop
				autoplay></dotlottie-player>
		</div>
	</section>
	<section>
		<a href="https://www.linkedin.com/in/dharmzeey/" target="_blank">
			<div class="w-3/4 m-auto text-center">
				<div
					class="mb-10 p-5 md:p-10 text-xl md:text-3xl border-2 md:border-4 border-slate-700 rounded-full cursor-pointer hover:bg-slate-700 transition duration-400 uppercase tracking-widest animate-connect"
				>
					Connect with me
				</div>
			</div>
		</a>
	</section>
</Layout>

<style>
	@keyframes scale-in {
		from {
			transform: scale(3);
		}
		to {
			transform: scale(1);
		}
	}

	@keyframes scale-out {
		from {
			transform: scale(0);
		}
		to {
			transform: scale(1);
		}
	}

	@keyframes slide-in {
		from {
			transform: translateX(-700px);
		}
		to {
			transform: translateX(0px);
		}
	}

	@keyframes slide-up {
		from {
			transform: translateY(400px);
		}
		to {
			transform: translateY(0px);
		}
	}

	#scale-in {
		@apply animate-[scale-in_0.6s_ease-in];
	}

	#scale-out,
	#scale-out-2 {
		@apply animate-[scale-out_1s_ease-in-out];
	}

	#slide-in,
	#slide-in-2 {
		@apply animate-[slide-in_1.2s_ease-in];
	}

	#slide-up {
		@apply animate-[slide-up_1s_ease-in];
	}

	@keyframes animate-connect {
		0% {
			color: gold;
			border-color: saddlebrown;
		}
		25% {
			color: crimson;
			border-color: gold;
		}
		30% {
			color: indigo;
			border-color: crimson;
		}
		50% {
			color: saddlebrown;
			border-color: indigo;
		}
		60% {
			color: blue;
			border-color: saddlebrown;
		}
		70% {
			color: teal;
			border-color: blue;
		}
		72% {
			color: purple;
			border-color: teal;
		}
		74% {
			color: slateblue;
			border-color: purple;
		}
		80% {
			color: darkturquoise;
			border-color: slateblue;
		}
		82% {
			color: chocolate;
			border-color: darkturquoise;
		}
		84% {
			color: hotpink;
			border-color: chocolate;
		}
		86% {
			color: yellow;
			border-color: hotpink;
		}
		88% {
			color: blanchedalmond;
			border-color: yellow;
		}
		90% {
			color: red;
			border-color: blanchedalmond;
		}
		92% {
			color: lime;
			border-color: red;
		}
		94% {
			color: greenyellow;
			border-color: lime;
		}
		96% {
			color: palevioletred;
			border-color: greenyellow;
		}
		98% {
			color: indianred;
			border-color: palevioletred;
		}
		100% {
			color: green;
			border-color: indianred;
		}
	}

	.animate-connect {
		animation: animate-connect ease-in-out 10000ms infinite alternate;
	}
</style>
