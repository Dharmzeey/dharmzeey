---
import Layout from "../layouts/Layout.astro";
import MyInfo from "../components/MyInfo.astro";
import TopDesign from "../components/TopDesign.astro";
import Projects from "../components/Projects.astro";
import BottomDesign from "../components/BottomDesign.astro";
import Footer from "../components/Footer.astro";
import FloatingNav from "../components/FloatingNav.astro";
import CursorTrail from "../components/CursorTrail.astro";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Adam Olanrewaju (Dharmzeey) Portfolio",
  "url": "https://dharmzeey.com",
  "author": {
    "@type": "Person",
    "name": "Adam Adedamola Olanrewaju",
    "alternateName": "Dharmzeey",
    "jobTitle": "Full Stack Developer",
    "worksFor": {
      "@type": "Organization",
      "name": "Freelance"
    }
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://dharmzeey.com/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};
---

<Layout
  title="Adam Olanrewaju (Dharmzeey) - Full Stack Developer | Django, Next.js, Flutter Expert"
  description="Full Stack Developer specializing in Django, Next.js, and modern web technologies."
  keywords="Full Stack Developer, Django, Next.js, Python, Nigeria Developer"
  structuredData={structuredData}
>
  <CursorTrail />
  <FloatingNav />
  <div id="home">
    <MyInfo />
  </div>
  <!-- <TopDesign /> -->
  <div id="projects">
    <Projects />
  </div>
  <!-- <BottomDesign /> -->
  <Footer />
</Layout>
