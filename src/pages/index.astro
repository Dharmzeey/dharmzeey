---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Dharmzeey">
	<section class="relative min-h-[40rem] md:min-h-[80vh] bg-[url('/images/second-bg.jpg')] bg-cover bg-center">
		<!-- <img src="/images/second-bg.jpg" class="min-h-[50vh]" alt=""> -->
		<div class="container m-auto flex justify-center items-center">
			<div class="h-5/6 md:h-1/4 absolute top-28 md:top-72">
				<h1 id="scale-out" class="text-5xl md:text-7xl">Howdy!, I'M Adam,</h1>
				<h2 id="scale-in" class="md:mt-8 text-2xl">
					I create professional frontend website and full stack web Applications
				</h2>
			</div>
		</div>
	</section>

	<section>
		<h1 id="slide-in" class="my-10 text-2xl">Latest Project</h1>
		<Card>
			<div id="slide-up" class="h-96 w-full relative bg-black bg-[url('/images/abuadfarm/Home-page.png')] bg-cover bg-center">
				<div class="h-full w-full">
					<div class="w-full h-full flex justify-center items-center text-4xl font-black text-black tracking-widest uppercase">AB Farms</div>
				</div>
				</div>
				<figcaption class="p-8 ">
					This is a web application that is based off of a operation in manufacturing company with different units.
				</figcaption>
				<div class="w-full m-auto flex justify-center">
					<a class="btn" href="/abuad-farm">View</a>
				</div>
		</Card>
	</section>

	<section>
		<h1 id="slide-in-2" class="my-10 text-2xl">About Me</h1>
		<Card>
			<div id="scale-out-2" class="h-60 w-full bg-[url('/images/about.jpg')] bg-cover bg-center mb-10"></div>
			<span class="p-6">
				A self taught software developer with 2+ years experience in Frontend and a 1+ years in Backend...
			</span>
			<br>
			<br>
			<div class="w-full m-auto flex justify-center">
				<a class="btn" href="/about">Read More</a>
			</div>
		</Card>
	</section>
</Layout>

<style>
	@keyframes scale-in {
		from {
			transform: scale(3);
		}
		to {
			transform: scale(1);
		}
	}

	@keyframes scale-out {
		from {
			transform: scale(0);
		}
		to {
			transform: scale(1);
		}
	}

	@keyframes slide-in {
		from {
			transform: translateX(-700px);
		}
		to {
			transform: translateX(0px);
		}
	}

	@keyframes slide-up {
		from {
			transform: translateY(400px);
		}
		to {
			transform: translateY(0px);
		}
	}

	#scale-in {
		@apply animate-[scale-in_0.6s_ease-in]
	}

	#scale-out, #scale-out-2 {
		@apply animate-[scale-out_1s_ease-in-out]
	}

	#slide-in, #slide-in-2 {
		@apply animate-[slide-in_1.2s_ease-in]
	}

	#slide-up {
		@apply animate-[slide-up_1s_ease-in]
	}
</style>