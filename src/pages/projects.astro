---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/ProjectCard.astro";

const completedProjects = await Astro.glob("../updates/completed/*.md");
const ongoingProjects = await Astro.glob("../updates/ongoing/*.md");
---

<Layout title="Projects">
  <h1 class="my-6 mt-16 heading text-center">
    Web and Mobile Application Projects
  </h1>
  <section class="px-5">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-1 md:gap-2">
      {
        completedProjects.map((project) => (
          <Card>
            <h2 class="project-title">{project.frontmatter.title}</h2>
            <div class="mb-2 text-xs text-justify">
               <span>{project.frontmatter.intro}</span> 
              </div>
            <div class="px-2 project-img">
              <img
                class="contain" src={`${project.frontmatter.image}`} alt={`${project.frontmatter.title}`}
              />
            </div>
            <small class="text text-gray-100">{project.frontmatter.category}</small>
            <div>
              <a class="btn text-sm" href={`/${project.frontmatter.slug}`}>
              View
            </a>
            </div>
          </Card>
        ))
      }
    </div>
  </section>

