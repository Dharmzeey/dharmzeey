---
import Layout from "../../layouts/Layout.astro";
import { getAllPosts } from "../../lib/contentful.js";

const posts = await getAllPosts();

function stripHtml(html: string) {
  return html
    .replace(/<[^>]*>/g, "") // remove tags
    .replace(/\s+/g, " ") // clean spacing
    .trim();
}
---

<Layout
title="Dharmzeey Blog - Insights on Web Development, Tech, and How-To Guides"
  description="Discover articles, findings, and insights from Dharmzeey on web development, how-to guides, and creative tech."
  keywords="Dharmzeey blog, web development articles, tech insights, programming tutorials, how-to guides, coding best practices, software development blog, tech trends, developer resources"
>
  <main class="min-h-screen max-w-5xl mx-auto px-6 py-16">
    <div class="flex justify-evenly mb-12 h-10">
      <a
        href="/"
        class="flex items-start self-start pt-2 text-gray-300 hover:text-blue-400 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        Back
      </a>
      <h1
        class="text-2xl md:text-4xl font-bold text-gray-100"
      >
        Dharmzeey Blog
      </h1>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 text-gray-300">
      {
        posts.map((post) => (
          <a
            href={`/blogs/${post.slug}`}
            class="group block bg-black/40 border border-white/10 rounded-2xl hover:scale-[1.02] transition-all duration-300 overflow-hidden shadow-md hover:shadow-xl hover:border-white/30"
          >
            <img
              src={post.image}
              alt={post.title?.toString()}
              class="w-full h-48 object-cover group-hover:opacity-90 transition-opacity duration-300"
            />
            <div class="p-5">
              <h2 class="text-lg md:text-xl font-semibold mb-2 text-gray-100 group-hover:text-blue-400 transition-colors duration-300">
                {post.title}
              </h2>
              <p class="text-sm text-gray-400 mb-3">
                {post.author} •{" "}
                {post.date
                  ? new Date(String(post.date)).toLocaleDateString()
                  : ""}
              </p>
              <p class="text-gray-300 text-sm line-clamp-3">
                {stripHtml(post.content).slice(0, 120)}...
              </p>
              <p class="text-blue-400 text-sm mt-3 font-medium md:opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                Read More →
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </main>
</Layout>
