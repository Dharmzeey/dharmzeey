---
import Card from "../components/ProjectCard.astro";

interface Project {
  frontmatter: {
    title: string;
    intro: string;
    image: string;
    category?: string;
    url?: string;
    github?: string;
    github_api?: string;
    summary: string;
  };
}

const projects: Project[] = Object.values(
  import.meta.glob("../updates/completed/*.md", { eager: true })
) as Project[];
---

<div class="container m-auto">
  <div class="text-center mb-16">
    <h1 class="main-heading pb-4">Featured Projects</h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      Explore my portfolio of web applications, APIs, and mobile solutions built with modern technologies
    </p>
  </div>
  <section>
    <div
      class="grid md:grid-cols-2 xl:grid-cols-3 gap-6 md:gap-8 items-stretch"
    >
      {
        projects.map((project) => (
          <Card id={project.frontmatter.title} class="group">
            <div class="relative overflow-hidden rounded-xl mb-4">
              <img
                class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                src={`${project.frontmatter.image}`}
                alt={`${project.frontmatter.title}`}
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
            
            <h2 class="project-title gradient-text">{project.frontmatter.title}</h2>
            
            <div class="mb-4 text-sm text-gray-600 leading-relaxed">
              <span>{project.frontmatter.intro}</span>
            </div>
            
            <div class="flex justify-center gap-4 mb-4">
              {project.frontmatter.url && (
                <a
                  title="Live Demo"
                  class="flex items-center justify-center w-12 h-12 bg-blue-100 hover:bg-blue-200 rounded-full transition-colors duration-300 group"
                  href={`${project.frontmatter.url}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <i class="fa-solid fa-globe text-blue-600 group-hover:scale-110 transition-transform" />
                </a>
              )}
              {project.frontmatter.github && (
                <a 
                  title="Source Code"
                  class="flex items-center justify-center w-12 h-12 bg-gray-100 hover:bg-gray-200 rounded-full transition-colors duration-300 group"
                  href={`${project.frontmatter.github}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <i class="fa-brands fa-github text-gray-700 group-hover:scale-110 transition-transform" />
                </a>
              )}
              {project.frontmatter.github_api && (
                <a
                  title="Backend API"
                  class="flex items-center justify-center w-12 h-12 bg-green-100 hover:bg-green-200 rounded-full transition-colors duration-300 group"
                  href={`${project.frontmatter.github_api}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <i class="fa-solid fa-server text-green-600 group-hover:scale-110 transition-transform" />
                </a>
              )}
            </div>
            
            <p class="text-gray-700 text-sm leading-relaxed line-clamp-4">{project.frontmatter.summary}</p>
            
            {project.frontmatter.category && (
              <div class="mt-4 pt-4 border-t border-gray-200">
                <span class="inline-block px-3 py-1 text-xs font-medium bg-purple-100 text-purple-800 rounded-full">
                  {project.frontmatter.category}
                </span>
              </div>
            )}
          </Card>
        ))
      }
    </div>
  </section>
  <script src="../scripts/script.js"></script>